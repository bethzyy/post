def generate_summary_with_model(model_name, model_client, model_type, search_results):
    """使用特定模型生成总结"""

    print(f"\n[步骤2] 使用 {model_name} 生成总结...")

    if model_type == "openai_compatible":
        # 使用OpenAI兼容接口
        try:
            prompt = f"""
基于以下2026年AI热点信息,写一篇深入简出的介绍和总结:

{search_results}

要求:
1. 深入浅出,通俗易懂
2. 重点突出,条理清晰
3. 字数800-1000字
4. 避免过于技术化的术语
5. 适合普通读者阅读
"""

            response = model_client.chat.completions.create(
                model="glm-4.6",
                messages=[
                    {"role": "system", "content": "你是一位科技作家,擅长将复杂的技术概念用通俗易懂的语言解释给大众。"},
                    {"role": "user", "content": prompt}
                ],
                temperature=0.7,
            )

            summary = response.choices[0].message.content
            print(f"    [成功] {model_name} 总结完成")
            return summary

        except Exception as e:
            print(f"    [失败] {str(e)[:100]}")
            return None

    else:
        # 其他类型的模型
        return None


